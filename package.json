{
  "name": "@spkf/react-tabs",
  "description": "Simple responsive tabs",
  "private": false,
  "version": "1.0.7",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/style.css": "./dist/style.css",
    "./dist/tabs": "./dist/tabs/tabs.d.ts"
  },
  "files": [
    "/dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && vite build && tsc",
    "lint": "eslint .",
    "ts-check": "tsc --noEmit",
    "format": "eslint src --fix",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "prepare": "husky"
  },
  "dependencies": {
    "classnames": "^2.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.0",
    "@eslint/js": "^9.25.0",
    "@mantine/core": "^7.13.4",
    "@mantine/dates": "^7.13.4",
    "@storybook/addon-docs": "^9.0.11",
    "@storybook/addon-onboarding": "^9.0.11",
    "@storybook/react-vite": "^9.0.11",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "*",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.4.1",
    "ajv": "^8.17.1",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-import-order-alphabetical": "^1.0.1",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^9.0.11",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "react": "^18",
    "react-dom": "^18",
    "rollup-plugin-visualizer": "^6.0.3",
    "storybook": "^9.0.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "peerDependencies": {
    "react": ">=18 || ^19",
    "react-dom": ">=18 || ^19",
    "@mantine/core": ">=7 || ^8",
    "@mantine/hooks": ">=7 || ^8",
    "@types/react": ">=18 || ^19",
    "@types/react-dom": ">=18 || ^19"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "bun format",
      "bun lint"
    ]
  }
}
